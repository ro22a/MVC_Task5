@model List<ApplicationUser>


 @section Scripts
 {
     <partial name="_NotificationPartial">
 }

  


<div class="container-fluid px-4 mt-4">
    <h2 class="mb-3">Users Management</h2>


    <div class="mb-4">
         <a href="~/Admin/User/Create" class="btn btn-success btn-md px-4">
                    Add User
         </a>
    </div>


    <table class="table table-striped table-bordered">
        <thead class="table-danger">
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Email Confirmed</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    
                    @if (item.EmailConfirmed)
                    {
                        <td> <span class="badge bg-success">Confirmed</span></td>
                    }
                    else
                    {
                        <td> <span class="badge bg-danger">Not Confirmed</span></td>
                    }


                    <td>
                        <div class="d-flex gap-2">
                            <a href="~/Admin/User/Edit/@item.Id" class="btn btn-primary btn-sm">
                                Edit
                            </a>
                            @if (item.LockoutEnabled)
                            {
                                <a href="javascript:void(0);" 
                               class="btn btn-danger btn-sm" 
                               data-url="~/Admin/LockUnLOck/Edit/@item.Id">
                                Lock
                                </a>
                            }
                            else
                            {
                                    <a href="javascript:void(0);"
                                       class="btn btn-primary btn-sm"
                                       data-url="~/Admin/LockUnLOck/Edit/@item.Id">
                                        Un Lock
                                    </a>
                            }

                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>



</div>



