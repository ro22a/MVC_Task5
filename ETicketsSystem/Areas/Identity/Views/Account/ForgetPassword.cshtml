@model ETicketsSystem.ViewModels.ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:100vh; background-color:#f8f9fa;">
    <div class="col-md-6 col-lg-4">

        <!-- Card -->
        <div class="card shadow-lg border-0 rounded-3 w-100">
            <div class="card-header bg-danger text-white text-center py-3 rounded-top">
                <h3 class="mb-0">Reset Password</h3>
            </div>

            <div class="card-body p-4 bg-light">
                <form asp-action="ForgetPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="EmailORUserName" class="form-label fw-bold"></label>
                        <input asp-for="EmailORUserName" class="form-control" placeholder="Enter email or username" />
                        <span asp-validation-for="EmailORUserName" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-danger px-4 btn-sm">Send</button>
                    </div>
                </form>

                <!-- Back to login -->
                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-danger fw-bold">Back to Login</a>
                </div>
            </div>
        </div>
        <!-- End Card -->

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
