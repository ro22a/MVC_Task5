@model ETicketsSystem.ViewModels.NewPasswordVM

@{
    ViewData["Title"] = "Set New Password";
}

<div class="d-flex flex-column min-vh-100">
    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 w-100">
                
           
                <div class="card-header bg-danger text-white text-center py-3 rounded-top">
                    <h3 class="mb-0">Set New Password</h3>
                </div>

                
                <div class="card-body p-4 bg-light">
                    <form asp-action="NewPassword">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" name="ApplicationUserId" value="@Model.ApplicationUserId" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-sm px-4">Save</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-danger fw-bold">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
