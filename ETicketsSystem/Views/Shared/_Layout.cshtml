<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema Home</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user/style.css">
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            <a class="navbar-brand" href="https://localhost:7212/">E-Tickets</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="/User/Home/Index">Home</a></li>
                    @if (User.Identity is not null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link active" href="/Identity/Profile/Welcome">Welcome @User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/Identity/Account/Logout">Logout</a></li>
                        
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link active" href="/Identity/Account/Login">Login</a></li>

                        <li class="nav-item"><a class="nav-link active" href="/Identity/Account/Register">Register</a></li>
                        
                    }

                    @if (User.IsInRole(SD.SuperAdminRole) || User.IsInRole(SD.AdminRole))
                    {
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Admin">Management System</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()
    <div class="container">
        <main role="main" class="pb-3">

        </main>
    </div>

    <footer class="bg-danger text-white text-center py-3">
        <p class="mb-0">&copy; 2025 Cinema Booking. All Rights Reserved.</p>
    </footer>

    <script src=~/js/user/script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts",required:false)

</body>
</html>
